{
  "multipart": [
    {
      "apply": {
        "model": "decorative_blocks:block/oak_seat_post_full"
      }
    },
    {
      "when": {
        "facing": "north"
      },
      "apply": {
        "model": "decorative_blocks:block/oak_seat_top"
      }
    },
    {
      "when": {
        "facing": "south"
      },
      "apply": {
        "model": "decorative_blocks:block/oak_seat_top",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "east"
      },
      "apply": {
        "model": "decorative_blocks:block/oak_seat_top",
        "y": 90
      }
    },
    {
      "when": {
        "facing": "west"
      },
      "apply": {
        "model": "decorative_blocks:block/oak_seat_top",
        "y": 270
      }
    }
  ]
}